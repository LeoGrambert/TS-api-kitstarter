{
  "name": "kitstarter-api",
  "description": "Kitstarter for API using Typescript and Hapi.js.",
  "version": "1.0.0",
  "main": "lib/src/main.js",
  "scripts": {
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js -w lib lib/main.js",
    "dev": "run-p dev:*",
    "test": "NODE_ENV=test mocha -r ts-node/register test/**/*.test.ts",
    "start": "node lib/main.js",
    "prepare": "husky install",
    "lint": "eslint \"src/**\"",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -c kitstarter"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,md}": "prettier --write"
  },
  "repository": "https://github.com/LeoGrambert/TS-api-kitstarter.git",
  "keywords": [
    "Kitstarter",
    "API",
    "Typescript",
    "Hapi.js"
  ],
  "author": "LÃ©o Grambert <leogrambert@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeoGrambert/TS-api-kitstarter/issues"
  },
  "homepage": "https://github.com/LeoGrambert/TS-api-kitstarter/blob/develop/README.md",
  "dependencies": {
    "@hapi/hapi": "^20.1.5",
    "dotenv": "^10.0.0",
    "mysql2": "^2.3.0",
    "tslog": "^3.2.2",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/hapi__hapi": "^20.0.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  }
}
